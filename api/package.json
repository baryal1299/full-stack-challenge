{
  "name": "apiv2",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "build": "npx tsc && npm run copy:assets",
    "copy:assets": "npx cpx 'src/config/*.yaml' 'dist/src/config/' && npx cp tools/* 'dist/tools/' && npx cpx 'package*.json' 'dist/'",
    "db:hydrate": "ts-node tools/hydrate",
    "db:sync": "npm run typeorm:cli schema:sync",
    "dev": "npm run copy:assets && npm run db:sync && tsc-watch --onSuccess \"node ./dist/src/server.js\"",
    "lint": "npx eslint . --ext .ts",
    "start": "npm run db:sync && npm run db:hydrate && node src/server.js",
    "test": "npx jest --passWithNoTests",
    "typeorm:cli": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js -f ./src/config/ormconfig"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.6",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.7",
    "@types/fs-extra": "^9.0.1",
    "@types/http-status-codes": "^1.2.0",
    "@types/js-yaml": "^3.12.5",
    "@types/swagger-express-validator": "0.0.0",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/tsc-watch": "^4.2.0",
    "@types/winston": "^2.4.4",
    "@types/yamljs": "^0.2.31",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "envalid": "^6.0.2",
    "express": "^4.17.1",
    "express-openapi-validate": "^0.5.1",
    "fs-extra": "^9.0.1",
    "http-status-codes": "^1.4.0",
    "js-yaml": "^3.14.0",
    "pg": "^8.3.0",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.1.4",
    "tsc-watch": "^4.2.9",
    "typeorm": "^0.2.25",
    "typescript": "^3.9.7",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/jest": "^26.0.5",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "cpx": "^1.5.0",
    "eslint": "^7.5.0",
    "jest": "^26.1.0",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.10.2",
    "tsconfig-paths": "^3.9.0"
  }
}
